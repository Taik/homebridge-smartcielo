{
  "pluginAlias": "Smartcielo",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "username": {
        "title": "Username (email)",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true
      },
      "ip": {
        "title": "Public IP Address",
        "type": "string",
        "description": "Your public IP is used as a session identifier. Go to https://whatismyipaddress.com/ to get.",
        "required": true
      },
      "macAddresses": {
        "title": "HVAC MAC Addresses",
        "description": "List of the MAC Addresses of each HVAC unit you want to the plugin to connect",
        "type": "array",
        "items": {
          "title": "MAC Address",
          "description": "No colons, all caps",
          "type": "string",
          "pattern": "^[A-F0-9]{12}$"
        }
      }
    }
  }
}
